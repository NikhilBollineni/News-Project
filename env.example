# Environment variables for news ingestion pipeline

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=news_app_autos_v1

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# RSS Configuration
RSS_URL=https://news.google.com/rss/search?hl=en-US&gl=US&ceid=US:en&q=automotive
POLL_INTERVAL_SECONDS=120

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Scraping Configuration
MAX_RETRIES=3
REQUEST_TIMEOUT=30
MIN_ARTICLE_LENGTH=250

# Logging
LOG_LEVEL=INFO

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# Production Configuration (for deployment)
# MONGODB_URL=mongodb://admin:password@mongodb:27017/news_app_autos_v1?authSource=admin
# REDIS_URL=redis://redis:6379/0
# REACT_APP_API_URL=https://your-domain.com
# REACT_APP_WS_URL=wss://your-domain.com